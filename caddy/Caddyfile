*:80
root /srv/femiwiki.com
index index.php
fastcgi / fastcgi:9000 php
rewrite /w/api.php {
  to /api.php
}
rewrite /w {
  r  /(.*)
  to /index.php
}
# Reference:
#   https://www.mediawiki.org/wiki/RESTBase/Installation#Proxy_requests_to_RESTBase_from_your_webserver
proxy /femiwiki.com restbase:7231
